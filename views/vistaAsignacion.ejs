<% include layout %>
 <div class="row">
  <div class="page-header">
    <h1>Asignacion</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h2>Lista de asignaciones</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Id</th>
          <th>Grupo</th>
          <th>IdSeccion</th>
          <th>Curso</th>
        </tr>
      </thead>
      <tbody data-bind="foreach: asignaciones">
        <tr>
          <td data-bind="text: idDetalleCurso"></td>
          <td data-bind="text: nombre"></td>
          <td data-bind="text: idSeccion"></td>
          <td data-bind="text: nombreCurso"></td>
            <td>
  							<div class="btn-group">
  								<button class="btn btn-warning"
  										data-toggle="modal"
  										data-target="#modalEditar"
  										data-bind="click: $root.cargar">
  									Editar
  								</button>
  								<button class="btn btn-danger"
  										data-bind="click: $root.eliminar">
  									Eliminar
  								</button>
  							</div>
  						</td>
						</td>
        </tr>
      </tbody>
    </table>
    <button type="button" class="btn btn-primary"
				data-toggle="modal"
				data-target="#modalAgregar">
			Agregar
		</button>
  </div>
</div>

<!--Modal AGREGAR-->
<div class="modal fade" id="modalAgregar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<form data-bind="submit: agregar" id="form-asignacion">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title">Agregar Asignacion</h4>
				</div>
				<div class="modal-body">
          <div class="form-group">
						<label for="selectGrupo">Grupo</label>
						<select class="form-control" data-bind="options: grupos,
								optionsText: 'nombre',
								value: asignacionNueva.grupo"></select>
					</div>
          <div class="form-group">
						<label for="selectCurso">Curso</label>
						<select class="form-control" data-bind="options: cursos,
								optionsText: 'nombreCurso',
								value: asignacionNueva.curso"></select>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
					<button type="submit" class="btn btn-primary">Guardar</button>
				</div>
			</form>
		</div>
	</div>
</div>
<!--Fin AGREGAR-->
<!--Modal EDITAR-->
<div class="modal fade" id="modalEditar" tabindex="-1" role="dialog"
	 aria-labelledby="myModalLabel" data-bind="if: asignacionCargada">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<form data-bind="submit: editar">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title" id="myModalLabel">Editar Asignacion</h4>
				</div>
				<div class="modal-body">
					<div class="form-group">
						<label for="inputId">Id</label>
						<input type="text" class="form-control" name="inputId" id="inputId"
							   data-bind="value: asignacionCargada().idDetalleCurso" disabled />
					</div>
          <div class="form-group">
						<label for="selectGrupo">Grupo</label>
						<select class="form-control" data-bind="options: grupos,
								optionsText: 'nombre',
								value: asignacionCargada().grupo"></select>
					</div>
          <div class="form-group">
						<label for="selectCurso">Curso</label>
						<select class="form-control" data-bind="options: cursos,
								optionsText: 'nombreCurso',
								value: asignacionCargada().curso"></select>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<button type="submit" class="btn btn-primary">Editar</button>
				</div>
			</form>
		</div>
	</div>
</div>
<!--Fin EDITAR-->

<% include footer %>
<script src="/javascripts/asignacionCliente.js"></script>
